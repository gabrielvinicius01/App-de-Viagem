<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:padding="25dp">

    <ImageView
        android:id="@+id/localImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corner_white"
        android:scaleType="centerCrop"
        android:src="@drawable/norte" />

    <LinearLayout
        android:id="@+id/norteRetangulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/localImageView"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="60dp"
        android:paddingTop="10dp"
        android:paddingEnd="60dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/localTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Norte"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/norteRetangulo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/localImageView"
        android:numStars="5"
        android:progressTint="#FFE500"
        android:rating="4.0"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:stepSize="0.5" />

</RelativeLayout>
